<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="loginForm">



	<var name="user" class="ru.javabegin.training.springwebflow.objects.User" />

	<view-state id="loginForm" view="login" model="user">
		<transition on="create" to="registerUserFlow" validate="false" />
		<transition on="submit" to="actionCheckLogin" />
	</view-state>

	<subflow-state id="registerUserFlow" subflow="register-user">
		<input name="user"/>
		<transition on="userCreated" to="loginForm"/>
		<transition on="end" to="loginForm"/>
	</subflow-state>

	<action-state id="actionCheckLogin">
		<evaluate expression="userService.checkUser(user, flowRequestContext)" />
		<transition on="yes" to="mainContent" />
		<transition on="no" to="loginForm"/>
	</action-state>

	<end-state id="mainContent" view="main" />



</flow>